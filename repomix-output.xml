            `action_type` varchar(50) NOT NULL,
            `object_id` bigint(20) unsigned DEFAULT 0,
            `meta_data` longtext,
            `created_at` datetime NOT NULL,
            PRIMARY KEY (`log_id`),
            KEY `user_action` (`user_id`, `action_type`)
        ) {$charset_collate};";
        dbDelta($action_log_sql);
    }
