            RuleExecution::create([
                'rule_id' => $rule->id,
                'user_id' => $context['user_id'] ?? null,
                'context' => $context,
                'executed_at' => now(),
            ]);
        });
    }
    
    protected function logRuleExecution(Rule $rule, array $context): void
    {
        Log::info('Rule executed', [
            'rule_id' => $rule->id,
