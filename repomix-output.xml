<?php
namespace CannaRewards\Services;

use CannaRewards\Repositories\SettingsRepository;
use CannaRewards\Infrastructure\WordPressApiWrapper;

// Exit if accessed directly.
if ( ! defined( 'WPINC' ) ) {
    die;
