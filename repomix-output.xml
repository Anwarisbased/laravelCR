        foreach ($args as $arg) {
            if (strpos($result, '%d') !== false) {
                // Replace integer placeholder with actual integer
                $result = preg_replace('/%d/', (int)$arg, $result, 1);
            } elseif (strpos($result, '%s') !== false) {
