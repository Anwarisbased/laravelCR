        switch (get_class($event)) {
            case ProductScanned::class:
                $user = $event->user;
                $eventType = 'product_scanned';
                $context = [
                    'user' => [
                        'id' => $user->id,
                        'lifetime_points' => $user->lifetime_points,
                        'current_rank' => $user->current_rank_key,
