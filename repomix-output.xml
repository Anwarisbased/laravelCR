        // <<<--- REFACTOR: Use the service
        if (!$this->configService->canUsersRegister()) {
            throw new Exception('User registration is currently disabled.', 503);
        }

        if (empty($command->password)) {
            throw new Exception('A password is required.', 400);
        }

        // --- REFACTORED LOGIC ---
