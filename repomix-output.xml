                ];
                break;
                
            case PointsGranted::class:
                $user = $event->user;
                $eventType = 'points_granted';
                $context = [
                    'user' => [
                        'id' => $user->id,
                        'lifetime_points' => $user->lifetime_points,
                        'current_rank' => $user->current_rank_key,
                    ],
                    'points_awarded' => $event->pointsAwarded,
